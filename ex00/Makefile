RED		:=\033[0;31m
GREEN	:=\033[0;32m
BLUE	:=\033[0;34m
NC		:=\033[0m

NAME	?= megaphone

# sources ---------------------------------------------------------------------#

SRC 	?= megaphone.cpp

# objects ---------------------------------------------------------------------#

OBJ_DIR	:= .build/
OBJ		:= $(SRC:%.cpp=$(OBJ_DIR)%.o)

# compilation -----------------------------------------------------------------#

CXX			:= c++
CXXFLAGS	:= -Wall -Wextra -Werror -std=c++98

#------------------------------------------------------------------------------#
# rules                                                                        #
#------------------------------------------------------------------------------#

all: $(NAME)

clean:
	@rm -rf $(OBJ_DIR)

fclean: clean
	@rm -rf $(NAME)

re: fclean all

#------------------------------------------------------------------------------#
# compilation                                                                  #
#------------------------------------------------------------------------------#

$(OBJ_DIR)%.o: %.cpp
	@mkdir -p $(dir $@)
	@$(CXX) $(CXXFLAGS) -c $< -o $@
	@echo "compiled $<"

#------------------------------------------------------------------------------#
# linkage                                                                      #
#------------------------------------------------------------------------------#

$(NAME): $(OBJ)
	@$(CXX) $(CXXFLAGS) $(OBJ) -o $(NAME)
	@echo "created $(NAME)"
	
#------------------------------------------------------------------------------#
# specifications                                                               #
#------------------------------------------------------------------------------#

.PHONY: all \
		clean \
		fclean \
		re
